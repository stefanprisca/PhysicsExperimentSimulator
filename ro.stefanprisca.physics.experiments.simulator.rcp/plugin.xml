<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="ro.stefanprisca.physics.experiments.simulator.rcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="ExperimentPerspective"
            class="ro.stefanprisca.physics.experiments.simulator.rcp.perspectives.ExperimentsPerspective"
            id="ro.stefanprisca.physics.experiments.simulator.perspective">
      </perspective>
      <perspective
            class="ro.stefanprisca.physics.experiments.simulator.rcp.perspectives.RuntimePerspective"
            icon="icons/releng_gears.gif"
            id="ro.stefanprisca.physics.experiments.simulator.rcp.enviroment.RuntimePerspective"
            name="Runtime Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="ExperimentsView"
            class="org.eclipse.recommenders.injection.ExtensionFactory:ro.stefanprisca.physics.experiments.simulator.rcp.ExperimentsView"
            id="ro.stefanprisca.physics.experiments.simulator.view">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="ro.stefanprisca.physics.experiments.simulator.view">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="Preferences"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.ui.ide.workbench"
            name="simulator.product">
         <property
               name="appName"
               value="simulator.product">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="ro.stefanprisca.physics.experiments.simulator.rcp.preferences.SimulatorPreferencePage"
            id="ro.stefanprisca.physics.experiments.simulator.rcp.preferences.SImulatorPreferencePage"
            name="Simulator Preferences">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="ro.stefanprisca.physics.experiments.simulator.rcp.preferences.PreferenceInitializer">
      </initializer>
   </extension>

</plugin>
