<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="splashExtension" name="Splash Extensions" schema="schema/splashExtension.exsd"/>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="ro.stefanprisca.physics.experiments.simulator.rcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="ro.stefanprisca.physics.experiments.simulator.rcp.perspectives.RuntimePerspective"
            icon="icons/releng_gears.gif"
            id="ro.stefanprisca.physics.experiments.simulator.rcp.enviroment.RuntimePerspective"
            name="Runtime Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="ExperimentsView"
            class="ro.stefanprisca.physics.experiments.simulator.rcp.ExperimentsView"
            id="ro.stefanprisca.physics.experiments.simulator.view">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="ro.stefanprisca.physics.experiments.simulator.view">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="Preferences"
                  style="push">
            </command>
         </menu>
         <menu
               label="Help">
            <command
                  commandId="org.eclipse.ui.help.displayHelp"
                  label="Help"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.help.quickStartAction"
                  label="Show Welcome"
                  style="push">
            </command>
         </menu>
         <menu
               label="Views">
            <command
                  commandId="org.eclipse.ui.views.showView"
                  label="show view"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="ro.stefanprisca.physics.experiments.simulator.rcp.application"
            name="simulator.product">
         <property
               name="appName"
               value="simulator.product">
         </property>
         <property
               name="aboutImage"
               value="icons/einstein.gif">
         </property>
         <property
               name="aboutText"
               value="Welcome to the Physics Simulator!">
         </property>
         <property name="introBrandingImage" value="product:icons/releng_gears.gif"/>
		 <property name="introTitle" value="Physics Experiments Simulator"/>
   <property
         name="windowImages"
         value="icons/releng_gears.gif">
   </property>
   <property
         name="preferenceCustomization"
         value="plugin_customization.ini">
   </property>
   <property
         name="startupForegroundColor"
         value="FFFFFF">
   </property>
   <property
         name="startupMessageRect"
         value="7,320,445,20">
   </property>
   <property
         name="startupProgressRect"
         value="5,340,445,15">
   </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="ro.stefanprisca.physics.experiments.simulator.rcp.preferences.SimulatorPreferencePage"
            id="ro.stefanprisca.physics.experiments.simulator.rcp.preferences.SImulatorPreferencePage"
            name="Simulator Preferences">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="ro.stefanprisca.physics.experiments.simulator.rcp.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.console.consoleFactories">
      <consoleFactory
            class="ro.stefanprisca.physics.experiments.simulator.rcp.logging.ConsoleFactory"
            label="Results">
      </consoleFactory>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="ro.stefanprisca.physics.experiments.simulator.rcp.editors.ExperimentEditor"
            contributorClass="ro.stefanprisca.physics.experiments.simulator.rcp.editors.ExperimentEditorContributor"
            extensions="empe"
            icon="icons/sample.gif"
            id="ro.stefanprisca.physics.experiments.simulator.rcp.editors.ExperimentEditor"
            name="Experiment Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="ro.stefanprisca.physics.experiments.simulator.rcp.newexperiment"
            name="Experiment Wizards">
      </category>
      <wizard
            category="ro.stefanprisca.physics.experiments.simulator.rcp.newexperiment"
            class="ro.stefanprisca.physics.experiments.simulator.rcp.wizards.NewExperimentWizard"
            icon="icons/sample.gif"
            id="ro.stefanprisca.physics.experiments.simulator.rcp.wizards.NewExperimentWizard"
            name="Experiment File">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="toc.xml"
            primary="true">
      </toc>
      <toc
            file="tocgettingStarted.xml">
      </toc>
      <toc
            file="tocsamples.xml">
      </toc>
   </extension>
   <extension
         point="org.eclipse.ui.intro.configExtension">
      <configExtension
            configId="org.eclipse.ui.intro.universalConfig"
            content="intro/intoduction.xml">
      </configExtension>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <introProductBinding
            introId="org.eclipse.ui.intro.universal"
            productId="ro.stefanprisca.physics.experiments.simulator.rcp.product">
            
      </introProductBinding>
   </extension>
   
</plugin>
